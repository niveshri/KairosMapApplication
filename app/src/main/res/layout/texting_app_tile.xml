<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textAppTile"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@color/projector_transparent"
        />

    <TextView
        android:id="@+id/textingShadow"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/app_drop_shadow"
        />


    <TextView
        android:id="@+id/textTileHeader"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:background="@color/textHeaderColor"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:text="Messages"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"

        />

    <ImageView
        android:id="@+id/textIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/sms_white"
        android:layout_alignRight="@+id/textTileHeader"
        />


    <TextView
        android:id="@+id/last"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_below="@id/textTileHeader"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="Unread"
        android:layout_marginTop="20dp"
        android:gravity="center"

        />





    <TextView
        android:id="@+id/unreadTextCount"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/last"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="1"
        android:gravity="center"
        />



    <!-- for when there's no new/unread texts, not sure about this info tho
