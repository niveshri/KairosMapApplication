        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_below="@id/last"
        android:textSize="16sp"
        android:textColor="@color/textHeaderColor"
        android:text="Leslie B"
        android:gravity="center"
        />
